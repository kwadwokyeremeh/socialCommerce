{
    "compilerOptions": {
      "target": "ES2016",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "baseUrl": "src/",
      "paths": {
          "@/*": ["./*"]
      }
    },
    "include": ["./src/types/**/*.ts", "next-env.d.ts", "**/*.ts", "**/*.tsx", "./src/**/*.ts", "./src/**/*.tsx", "./src/styles/**/*.{ts,tsx}"],
    "exclude": ["node_modules"]
  }
